<%- layout('layouts/main.ejs') %>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h3>Login</h3>
            </div>
            <div class="card-body">
                <form action="/signin" method="POST" class="mt-4">
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Insert email" class="form-control">
                    </div>
                    <div class="form-group">
                      <input type="password" name="password" placeholder="Insert password" class="form-control">  
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-4">OK</button>
                </form>  
            </div>
        </div>
    </div>   
</div>